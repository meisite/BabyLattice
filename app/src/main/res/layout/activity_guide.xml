<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="qianfeng.com.babylattice.z_other.ui.GuideActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <qianfeng.com.babylattice.z_other.widget.GuideIndexView
        android:id="@+id/guide_index_view"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        app:circle_padding="20dp"
        app:color_default="#ccc"
        app:color_selected="#fff"
        app:count="5"
        app:radius="5dp"/>
</RelativeLayout>
